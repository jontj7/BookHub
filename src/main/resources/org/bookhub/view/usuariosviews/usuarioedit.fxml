<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="usuarioedit" prefHeight="507.0" prefWidth="480.0"
      style="-fx-background-color: #151515; -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bookhub.controller.usuarios.UsuariosEditController">
   <children>
      <Label layoutX="32.0" layoutY="28.0" style="-fx-font-weight: bold;" text="Editar usuario" textFill="white">
         <font>
            <Font name="Inter 18pt Regular" size="20.0" />
         </font>
      </Label>
      <Label layoutX="32.0" layoutY="61.0" text="Edita los datos del usuario" textFill="#8d8d8d">
         <font>
            <Font name="Inter 18pt Medium" size="14.0" />
         </font>
      </Label>

      <!-- Campo nombres -->
      <Label layoutX="32.0" layoutY="109.0" style="-fx-font-weight: bold;" text="Nombres" textFill="white">
         <font>
            <Font name="Inter 18pt Regular" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtNombres" layoutX="32.0" layoutY="137.0" prefHeight="40.0" prefWidth="416.0"
                 promptText="Ingresa nombres"
                 style="-fx-background-color: transparent; -fx-border-color: #282828; -fx-border-radius: 10px; -fx-text-fill: white;">
         <font>
            <Font name="Inter 18pt Medium" size="14.0" />
         </font>
      </TextField>

      <!-- Campo apellidos -->
      <Label layoutX="32.0" layoutY="207.0" style="-fx-font-weight: bold;" text="Apellidos" textFill="white">
         <font>
            <Font name="Inter 18pt Regular" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtApellidos" layoutX="32.0" layoutY="235.0" prefHeight="40.0" prefWidth="416.0"
                 promptText="Ingresa apellidos"
                 style="-fx-background-color: transparent; -fx-border-color: #282828; -fx-border-radius: 10px; -fx-text-fill: white;">
         <font>
            <Font name="Inter 18pt Medium" size="14.0" />
         </font>
      </TextField>

      <!-- Campo contraseña -->
      <Label layoutX="32.0" layoutY="310.0" style="-fx-font-weight: bold;" text="Contraseña" textFill="white">
         <font>
            <Font name="Inter 18pt Regular" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtContrasena" layoutX="32.0" layoutY="338.0" prefHeight="40.0" prefWidth="416.0"
                 promptText="Ingresa una contraseña"
                 style="-fx-background-color: transparent; -fx-border-color: #282828; -fx-border-radius: 10px; -fx-text-fill: white;">
         <font>
            <Font name="Inter 18pt Medium" size="14.0" />
         </font>
      </TextField>

      <!-- Botones -->
      <Button layoutX="172.0" layoutY="434.0" onAction="#onCancelar" prefHeight="45.0" prefWidth="99.0"
              style="-fx-background-color: #FF005D; -fx-text-fill: white; -fx-background-radius: 6px;"
              text="Cancelar">
         <font>
            <Font name="Inter 18pt SemiBold" size="16.0" />
         </font>
      </Button>
      <Button layoutX="287.0" layoutY="434.0" onAction="#onGuardar" prefHeight="45.0" prefWidth="166.0"
              style="-fx-background-color: #0022FF; -fx-text-fill: white; -fx-background-radius: 6px;"
              text="Guardar cambios">
         <font>
            <Font name="Inter 18pt SemiBold" size="16.0" />
         </font>
      </Button>
   </children>
</Pane>
