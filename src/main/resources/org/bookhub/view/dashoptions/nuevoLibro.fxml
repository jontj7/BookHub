<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.Pane?>
        <?import javafx.scene.layout.VBox?>

<Pane fx:id="formAgregarLibro" prefHeight="427.0" prefWidth="426.0" style="-fx-background-color: #1e1e1e; -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bookhub.controller.libro.NuevoLibroController">
    <children>
        <VBox layoutX="20" layoutY="20" prefHeight="353.0" prefWidth="360" spacing="15">
            <!-- Título -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Libros" textFill="white" />
            <Label style="-fx-font-size: 14px;" text="Agrega un nuevo libro." textFill="#cccccc" />

            <!-- Campo Nombre -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Nombre" textFill="white" />
                <TextField fx:id="txtNombreLibro" promptText="Ingresa el nombre del libro" style="-fx-background-color: Transparent; -fx-border-color: gray; -fx-border-radius: 6px;" />
            </VBox>

            <!-- Campo Categoría -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Categoría" textFill="white" />
                <ComboBox fx:id="comboCategoria" promptText="Selecciona la categoría del libro" style="-fx-background-color: transparent; -fx-background-radius: 4px; -fx-border-color: gray;" />
            </VBox>

            <!-- Campo Autor -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Autor" textFill="white" />
                <ComboBox fx:id="comboAutor" promptText="Selecciona el autor del libro" style="-fx-background-color: transparent; -fx-background-radius: 4px; -fx-border-color: gray;" />
            </VBox>

            <!-- Campo Copias -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Cantidad de copias" textFill="white" />
                <TextField fx:id="txtCopias" promptText="Ingresa la cantidad de copias" style="-fx-background-color: transparent; -fx-border-radius: 4px; -fx-border-color: gray;" />
            </VBox>

            <!-- Botones -->
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Button fx:id="cancel" onAction="#cancelar" prefHeight="25.0" prefWidth="72.0" style="-fx-background-color: FF005D; -fx-text-fill: white; -fx-background-radius: 6px;" text="Cancelar" />
                <Button fx:id="save" onAction="#agregarLibro" style="-fx-background-color: #0022FF; -fx-text-fill: white; -fx-background-radius: 6px;" text="Agregar libros" />
            </HBox>
        </VBox>
    </children>
</Pane>
