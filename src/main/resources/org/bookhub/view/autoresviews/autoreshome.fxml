<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bookhub.controller.autores.AutoresController"
      prefWidth="1221.0" prefHeight="1040.0" spacing="16.0"
      style="-fx-background-color: #151515; -fx-padding: 16px;">
   <cursor><Cursor fx:constant="W_RESIZE"/></cursor>

   <children>
      <!-- Botones superiores -->
      <HBox spacing="16.0" prefHeight="84.0">
         <children>
            <!-- Nuevo autor -->
            <Button onAction="#abrirFormularioAgregar"
                    style="-fx-background-color: transparent; -fx-border-color: #282828; -fx-border-radius: 8px;" HBox.hgrow="ALWAYS">
               <graphic>
                  <Pane>
                     <children>
                        <Label layoutX="83.0" layoutY="12.0" text="Nuevo autor" textFill="WHITE">
                           <font><Font name="Inter 18pt SemiBold" size="16.0"/></font>
                        </Label>
                        <Label layoutX="83.0" layoutY="34.0" text="Registra un nuevo autor" textFill="#8d8d8d">
                           <font><Font name="Inter 18pt Medium" size="14.0"/></font>
                        </Label>
                        <Button layoutX="5.0" layoutY="8.0" prefHeight="45.0" prefWidth="47.0"
                                style="-fx-border-radius: 35px; -fx-background-color: #0022FF;" />
                        <ImageView layoutX="19.0" layoutY="21.0" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" pickOnBounds="true">
                           <image><Image url="@../../../../assets/icons/icon-user.png"/></image>
                        </ImageView>
                     </children>
                  </Pane>
               </graphic>
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <!-- Editar autor -->
            <Button onAction="#abrirFormularioEditar"
                    style="-fx-background-color: transparent; -fx-border-color: #282828; -fx-border-radius: 8px;" HBox.hgrow="ALWAYS">
               <graphic>
                  <Pane>
                     <children>
                        <Label layoutX="83.0" layoutY="12.0" text="Editar autor" textFill="WHITE">
                           <font><Font name="Inter 18pt SemiBold" size="16.0"/></font>
                        </Label>
                        <Label layoutX="83.0" layoutY="34.0" text="Edita un autor existente" textFill="#8d8d8d">
                           <font><Font name="Inter 18pt Medium" size="14.0"/></font>
                        </Label>
                        <Button layoutX="5.0" layoutY="8.0" prefHeight="45.0" prefWidth="47.0"
                                style="-fx-border-radius: 35px; -fx-background-color: #FF8000;" />
                        <ImageView layoutX="19.0" layoutY="21.0" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" pickOnBounds="true">
                           <image><Image url="@../../../../assets/icons/icon-edit-circle.png"/></image>
                        </ImageView>
                     </children>
                  </Pane>
               </graphic>
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <!-- Eliminar autor -->
            <Button onAction="#eliminarAutor"
                    style="-fx-background-color: transparent; -fx-border-color: #282828; -fx-border-radius: 8px;" HBox.hgrow="ALWAYS">
               <graphic>
                  <Pane>
                     <children>
                        <Label layoutX="83.0" layoutY="12.0" text="Eliminar autor" textFill="WHITE">
                           <font><Font name="Inter 18pt SemiBold" size="16.0"/></font>
                        </Label>
                        <Label layoutX="83.0" layoutY="34.0" text="Elimina un autor del sistema" textFill="#8d8d8d">
                           <font><Font name="Inter 18pt Medium" size="14.0"/></font>
                        </Label>
                        <Button layoutX="5.0" layoutY="8.0" prefHeight="45.0" prefWidth="47.0"
                                style="-fx-border-radius: 35px; -fx-background-color: #FF005E;" />
                        <ImageView layoutX="19.0" layoutY="21.0" fitHeight="20.0" fitWidth="20.0" preserveRatio="true" pickOnBounds="true">
                           <image><Image url="@../../../../assets/icons/icon-trash.png"/></image>
                        </ImageView>
                     </children>
                  </Pane>
               </graphic>
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>
         </children>
      </HBox>

      <!-- Tabla y buscador -->
      <VBox spacing="8.0" prefHeight="932.0" prefWidth="1189.0" style="-fx-border-color: #282828; -fx-padding: 16px; -fx-border-radius: 8px;" VBox.vgrow="ALWAYS">
         <children>
            <Pane prefHeight="51.0">
               <children>
                  <Label text="Autores" textFill="WHITE">
                     <font><Font name="Inter 18pt SemiBold" size="20.0"/></font>
                  </Label>
                  <Label layoutY="30.0" text="Administra todos los autores registrados" textFill="#8d8d8d">
                     <font><Font name="Inter 18pt Medium" size="14.0"/></font>
                  </Label>
               </children>
            </Pane>

            <HBox alignment="CENTER_LEFT" spacing="14.0" prefHeight="62.0">
               <children>
                  <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true" pickOnBounds="true">
                     <image><Image url="@../../../../assets/icons/seachr-gray.png"/></image>
                  </ImageView>
                  <TextField fx:id="searchAutores" promptText="Ingrese el nombre del autor para buscarlo"
                             prefHeight="40.0" style="-fx-border-color: #282828; -fx-background-color: transparent; -fx-border-radius: 10px; -fx-text-fill: white;" HBox.hgrow="ALWAYS">
                     <font><Font name="Inter 18pt Regular" size="14.0"/></font>
                  </TextField>
               </children>
               <cursor><Cursor fx:constant="CLOSED_HAND"/></cursor>
            </HBox>

            <TableView fx:id="tablaAutores" VBox.vgrow="ALWAYS"
                       style="-fx-border-radius: 25px;" styleClass="tabla-oscura"
                       stylesheets="@../../../../Style/style.css">
               <columns>
                  <TableColumn fx:id="colIdAutor" prefWidth="75.0" text="ID"/>
                  <TableColumn fx:id="colNombre" prefWidth="150.0" text="Nombre"/>
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
